<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".Forget_password">


    <EditText
        android:id="@+id/editText5"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/et_bg"
        android:hint="Enter Mobile No"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send_buttion"
        android:layout_width="154dp"

        android:layout_height="52dp"

        android:background="@color/transparent"
        android:text="@string/menu_send"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5"
        app:layout_constraintVertical_bias="0.032" />


    <EditText
        android:id="@+id/code1"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="Enter Verification Code"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editText5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText5"
        app:layout_constraintTop_toBottomOf="@+id/send_buttion" />

    <Button
        android:id="@+id/verification_ok"
        android:layout_width="154dp"

        android:layout_height="52dp"

        android:layout_marginTop="24dp"
        android:background="@color/transparent"
        android:onClick="Checkcode"
        android:text="OK"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/code1"
        app:layout_constraintTop_toBottomOf="@+id/code1" />

</androidx.constraintlayout.widget.ConstraintLayout>
